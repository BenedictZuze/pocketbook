{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/pocketbase",
          "sidecar": true,
          "args": [
            "serve",
            "--dir",
            {
              "validator": "\\S+"
            },
            "--http",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    "shell:allow-open",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPDATA/*" }]
    }
  ]
}